<% if (success.length> 0) { %>
  <div class="alert alert-success alert-dismissible fade show col-4 alert_messages" role="alert">
    <%= success %>
      <button type="button" class="btn-close alert_message_btn" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>

    <% if (info.length> 0) { %>
      <div class="alert alert-info alert-dismissible fade show col-4 alert_messages" role="alert">
        <%= info %>
          <button type="button" class="btn-close alert_message_btn" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>

        <% if (error.length> 0) { %>
          <div class="alert alert-danger alert-dismissible fade show col-4 alert_messages" role="alert">
            <%= error %>
              <button type="button" class="btn-close alert_message_btn" data-bs-dismiss="alert"
                aria-label="Close"></button>
          </div>
          <% } %>